@model Immo_App.Core.Models.RentalContract.EditRentalContractViewModel
@{
    ViewData["Title"] = "Modifier contrat de location";
}

<h1 class=" mb-4">Modifier un contrat de location</h1>

<form method="post" action="Edit">
    <div class="form-group mt-3">
        <label for="id">ID</label>
        <input type="text" class="form-control" id="id" asp-for="id" readonly>
    </div>

    <div class="form-group mt-3">
        <label for="apartment">Appartement</label>
        <select class="form-control" readonly>
            <option value="@Model.apartment.id">@Model.apartment.address @Model.apartment.zip_code @Model.apartment.city</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label for="tenant">Locataire</label>
        <select class="form-control" readonly>
            <option value="@Model.tenant.id">@Model.tenant.first_name @Model.tenant.last_name - @Model.tenant.email</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label for="charges_price">Prix des charges</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="charges_price" placeholder="Prix des charges" onkeypress="return isNumberKey(event)" asp-for="charges_price">
            <div class="input-group-append">
                <span class="input-group-text">€</span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <label for="rent_price">Prix du loyer (les frais d'agence seront automatiquement calculés)</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="rent_price" placeholder="Prix du loyer" onkeypress="return isNumberKey(event)" asp-for="rent_price">
            <div class="input-group-append">
                <span class="input-group-text">€</span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <label for="security_deposit_price">Montant du dépôt de garantie</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="security_deposit_price" placeholder="Montant du dépôt de garantie" onkeypress="return isNumberKey(event)" asp-for="security_deposit_price">
            <div class="input-group-append">
                <span class="input-group-text">€</span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <label for="security_deposit_status">Statut du dépôt de garantie</label>
        <input type="text" class="form-control" id="security_deposit_status" asp-for="security_deposit_status" readonly>
    </div>

    <div class="form-group mt-3">
        <label for="tenant_balance">Solde du locataire</label>
        <div class="input-group mb-3">
            <input value="@string.Format("{0:0.00}", Model.tenant_balance)" type="text" class="form-control" id="tenant_balance" asp-for="tenant_balance" readonly>
            <div class="input-group-append">
                <span class="input-group-text">€</span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <label for="rental_status">Statut de la location</label>
        <input type="text" class="form-control" id="rental_status" asp-for="rental_status" readonly>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Envoyer</button>
</form>