@model Immo_App.Core.Models.InventoryFixture.InventoryFixture
@{
    ViewData["Title"] = "Modifier état des lieux";
}

<h1 class=" mb-4">Modifier un état des lieux</h1>

<form method="post" action="Edit">
    <div class="form-group mt-3">
        <label for="id">ID</label>
        <input type="text" class="form-control" id="id" asp-for="id" readonly>
    </div>

    <div class="form-group mt-3">
        <label for="date_inv">Date</label>
        <input type="date" class="form-control" id="date_inv" asp-for="date_inv">
    </div>

    <div class="form-group mt-3">
        <label for="type">Type d'état des lieux</label>
        <select class="form-control" id="type" asp-for="type">
            <option>Entrée</option>
            <option>Sortie</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label for="notes">Remarques notées lors de l'état des lieux</label>
        <textarea class="form-control" id="notes" asp-for="notes"></textarea>
    </div>

    <div class="form-group mt-3">
        <label for="fk_rental_contract_id">ID du contrat de location</label>
        <input type="text" class="form-control" id="fk_rental_contract_id" asp-for="fk_rental_contract_id" readonly>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Envoyer</button>
</form>